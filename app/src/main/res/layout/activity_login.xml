<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/root_layout"
        tools:context=".LoginActivity" android:background="@color/colorPrimary">


    <Button
            android:text="New user?"
            android:layout_width="104dp"
            android:layout_height="30dp"
            android:id="@+id/btn_main_newUser" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/colorAccent" android:textColor="@android:color/white"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/txt_main_emailEntry" android:hint="Email"
            android:background="@drawable/roundededittext"
            android:layout_marginTop="320dp" app:layout_constraintTop_toTopOf="parent" android:paddingStart="8dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:imeOptions="actionDone"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/txt_main_passwordEntry"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_main_emailEntry" android:hint="Password"
            android:background="@drawable/roundededittext" android:paddingLeft="8dp"/>
    <Button
            android:text="Login"
            android:layout_width="73dp"
            android:layout_height="41dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/btn_main_login" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_main_passwordEntry"
            app:layout_constraintHorizontal_bias="0.498" android:background="@drawable/roundedbuttonlightgrey"/>
    <ImageView
            android:layout_width="212dp"
            android:layout_height="209dp" app:srcCompat="@drawable/wablogofinal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/img_main_WABlogo"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.502"
            android:layout_marginTop="88dp" android:contentDescription="WAB Logo"/>
    <TextView
            android:text="Forgot password?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtview_login_forgotpassword" android:textColor="@color/colorLink"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txt_main_passwordEntry"
            app:layout_constraintEnd_toEndOf="@+id/txt_main_passwordEntry"/>
</android.support.constraint.ConstraintLayout>