<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity" android:background="@color/colorPrimary">


    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:logo="@mipmap/ic_launcher" />

    <Button
            android:text="New user?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_main_newUser" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_main_login"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/txt_main_emailEntry" android:hint="Email"
            android:background="@android:color/background_light"
            android:layout_marginTop="320dp" app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/txt_main_passwordEntry"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_main_emailEntry" android:hint="Password"
            android:background="@android:color/background_light"/>
    <Button
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/btn_main_login" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_main_passwordEntry"
            app:layout_constraintHorizontal_bias="0.498"/>
    <ImageView
            android:layout_width="212dp"
            android:layout_height="209dp" app:srcCompat="@drawable/wablogofinal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/img_main_WABlogo"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.502"
            android:layout_marginTop="88dp" android:contentDescription="WAB Logo"/>
</android.support.constraint.ConstraintLayout>