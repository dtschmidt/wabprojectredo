<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:fillViewport="false">

    <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            tools:context=".LinksActivity">

        <TextView
                android:text="Resources"
                android:layout_width="204dp"
                android:layout_height="48dp"
                android:id="@+id/txtview_Links_Resources" android:typeface="normal"
                android:textSize="36sp" android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent" android:visibility="visible"
                app:layout_constraintHorizontal_bias="0.497" android:textColor="@android:color/white"
                android:textAlignment="center"
        />
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="338dp"
                android:layout_height="150dp"
                android:background="@drawable/squareborder"
                android:paddingBottom="20dp" android:paddingTop="20dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout">
            <TextView
                    android:text="Websites"
                    android:textColor="@color/colorAccent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/txtview_links_websites"
                    android:textSize="24sp"
                    android:textAlignment="center"/>
            <TextView
                    android:text="Anti-Bullying Resources"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/txtview_links_bullyingfacts"
                    android:textSize="24sp"
                    android:textAlignment="center" android:layout_marginTop="12dp"/>
            <TextView
                    android:text="www.stopbullying"
                    android:autoLink="web"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/txtweb_links_stopbullying"
                    android:textAlignment="center" android:textSize="18sp" android:textColor="@color/colorLink"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="373dp"
                android:layout_height="496dp"
                android:background="@drawable/squareborder"
                android:paddingBottom="20dp" android:paddingTop="20dp" android:id="@+id/linearLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.526"
                android:layout_marginTop="75dp" app:layout_constraintTop_toTopOf="parent">
            <TextView
                    android:text="Hotlines"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/txtview_links_hotlines"
                    android:textSize="24sp"
                    android:textAlignment="center" android:textColor="@color/colorAccent"/>
            <TextView
                    android:text="Bullying Hotline"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtview_links_bullyinghotline"
                    android:textSize="24sp"
                    android:textAlignment="textStart" android:layout_marginTop="12dp"/>
            <TextView
                    android:text="1-800-829-0067"

                    android:textColor="@color/colorLink"
                    android:layout_width="305dp"
                    android:layout_height="wrap_content" android:id="@+id/txtnumber_links_bullyinghotline"
                    android:textSize="18sp" android:textAlignment="textEnd"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-Hotline for those dealing with bullying online or on social meida"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:id="@+id/txtview_links_bullyinghotline_description"/>
            <TextView
                    android:text="Suicide Hotline"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtview_links_suicidehotline"
                    android:textSize="24sp"/>
            <TextView
                    android:text="1-800-442-HOPE"

                    android:layout_width="309dp"
                    android:layout_height="wrap_content" android:id="@+id/txtnumber_links_suicidehotline"
                    android:textAlignment="textEnd" android:textSize="18sp" android:textColor="@color/colorLink"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-Provides 24/7 free and confidential support for people in distress and prevention and crisis resources for you or your loved ones"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:id="@+id/txtview_links_suicidehotline_description"/>
            <TextView
                    android:text="LBGT Support"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="24sp" android:id="@+id/txtview_links_lbgtsupport"/>
            <TextView
                    android:text="1-800-399-PEER"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:textColor="@color/colorLink"
                    android:textSize="18sp" android:textAlignment="textEnd" android:id="@+id/txtnumber_links_lbgt"
            />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-Confidential and anonymous listening line for advice and counseling. Call if you need to talk with someone about being bullied."
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:id="@+id/txtview_links_lbgt_description"/>
            <TextView
                    android:text="Anger Management"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/txtview_links_angermanagement"
                    android:textSize="24sp"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"/>
            <TextView
                    android:text="1-800-999-9999"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/txtnumber_links_angermanagement"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorLink" android:textSize="18sp"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/txtview_links_angermanagement_description"
                    android:textSize="14sp"
                    android:textAlignment="viewStart"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:text="-Hotline for those dealing with angry felings and emotions"/>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</ScrollView>
