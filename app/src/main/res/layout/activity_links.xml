<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".LinksActivity">

    <TextView
            android:text="RESOURCES"
            android:layout_width="204dp"
            android:layout_height="48dp"
            android:id="@+id/txtview_Links_Resources" android:typeface="normal"
            android:textSize="36sp" android:textColor="@color/colorGrey" android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="80dp" app:layout_constraintTop_toTopOf="parent" android:visibility="invisible"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="345dp"
            android:layout_height="206dp"
            android:background="@drawable/squareborder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingBottom="20dp" android:paddingTop="20dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">
        <TextView
                android:text="Websites:"
                android:textColor="@color/colorGrey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/txtview_links_websites" android:textSize="24sp"/>
        <TextView
                android:text="Anti-Bullying Facts:"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/txtview_links_bullyingfacts"
                android:textSize="24sp"
                android:textAlignment="center" android:layout_marginTop="12dp"/>
        <TextView
                android:text="stopbullying.gov"
                android:autoLink="web"
                android:textColor="@color/colorLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/txtweb_links_stopbullying"
                android:textAlignment="center" android:textSize="18sp"/>
        <TextView
                android:text="Preventing Bullying:"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:id="@+id/txtview_links_preventing"
                android:textSize="24sp"/>
        <TextView
                android:text="STOPit.com"
                android:autoLink="web"
                android:textColor="@color/colorLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/txtweb_links_preventing"
                android:textAlignment="center" android:textSize="18sp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="345dp"
            android:layout_height="206dp"
            android:background="@drawable/squareborder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.432"
            android:paddingBottom="20dp" android:paddingTop="20dp" android:id="@+id/linearLayout">
        <TextView
                android:text="Hotlines:"
                android:textColor="@color/colorGrey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/txtview_links_hotlines" android:textSize="24sp"/>
        <TextView
                android:text="Bullying Hotline:"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/txtview_links_bullyinghotline"
                android:textSize="24sp"
                android:textAlignment="center" android:layout_marginTop="12dp"/>
        <TextView
                android:text="931-581-0916"
                android:autoLink="phone"
                android:textColor="@color/colorLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/txtnumber_links_bullyinghotline"
                android:textAlignment="center" android:textSize="18sp"/>
        <TextView
                android:text="Suicide Prevention Hotline:"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/txtview_links_suicidehotline"
                android:textSize="24sp"/>
        <TextView
                android:text="931-581-0916"
                android:autoLink="phone"
                android:textColor="@color/colorLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/txtnumber_links_suicidehotline"
                android:textAlignment="center" android:textSize="18sp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>