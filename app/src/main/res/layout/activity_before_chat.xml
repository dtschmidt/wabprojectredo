<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:fillViewport="false">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 android:background="@color/colorPrimary">


        <TextView
                android:text="Welcome to the Wildcats Against Bullying Chat Room!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/txtview_beforechat_welcome" android:textSize="24sp" android:textAlignment="center"
                android:textColor="@android:color/white"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"/>
        <Button
                android:text="Report Bullying                                      >"
                android:layout_width="403dp"
                android:layout_height="60dp"
                android:id="@+id/btn_beforereport_report" android:textSize="20sp" android:textAlignment="viewStart"
                android:textColor="@color/colorAccent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="4dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView12"/>
        <TextView
                android:text="You should report bullying if..."
                android:layout_width="394dp"
                android:layout_height="42dp"
                android:id="@+id/txtview_reports_reportbullyingif" android:textSize="20sp"
                android:textColor="@android:color/white" app:layout_constraintStart_toStartOf="@+id/btn_beforereport_report"
                android:layout_marginStart="16dp" android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/btn_beforereport_report"
                app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/btn_beforereport_report"/>
        <TextView
                android:text="The chat rooms are a judgement-free space for you to express your feelings toward bullying. Before you enter, here's a few things you should know:"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtview_reports_reportbullyingif_option1" android:textSize="20sp"
                android:textColor="@android:color/white"
                android:textAlignment="textStart"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txtview_beforechat_welcome" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:textColor="@android:color/white" android:textSize="20sp"
                android:textAlignment="textStart"
                android:text="  -Persistent or egregious use of abusive, consulting, or offensive language"
                tools:layout_editor_absoluteY="216dp" tools:layout_editor_absoluteX="8dp"/>
        <TextView
                android:text="  -Aggressive yelling or shouting"
                android:layout_width="0dp"
                android:layout_height="27dp"
                android:id="@+id/textView7" android:textSize="20sp"
                android:textColor="@android:color/white" app:layout_constraintStart_toStartOf="@+id/textView6"
                app:layout_constraintTop_toBottomOf="@+id/textView6" app:layout_constraintEnd_toEndOf="@+id/textView6"/>
        <TextView
                android:text="  -Making repeated negative comments about a person's appearance, lifestyle, family, or culture"
                android:layout_width="404dp"
                android:layout_height="75dp"
                android:id="@+id/textView9"
                android:textSize="20sp" android:textColor="@android:color/white"
                android:textAlignment="viewStart"
                tools:layout_editor_absoluteY="348dp" tools:layout_editor_absoluteX="8dp"/>
        <TextView
                android:text="  -Regularly inappropriately teasing or making someone the brunt of pranks or practical jokes"
                android:layout_width="402dp"
                android:layout_height="48dp"
                android:id="@+id/textView10" android:textSize="20sp"
                android:textColor="@android:color/white"
                app:layout_constraintTop_toBottomOf="@+id/textView9"
                app:layout_constraintStart_toStartOf="@+id/textView9" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
        />
        <TextView
                android:text="  -Circulating inappropriate or embarrassing photos or videos via email or social media"
                android:layout_width="wrap_content"
                android:layout_height="53dp"
                app:layout_constraintStart_toStartOf="@+id/textView10"
                android:textSize="20sp" android:textColor="@android:color/white"
                android:layout_marginBottom="64dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView10" app:layout_constraintVertical_bias="0.0"
                android:id="@+id/txtview_reports_examplesofbullying_option6"/>
        <TextView
                android:text="All bullying reports will be reviewed by a Student Committee weekly. If you have a concern that needs to be looked at today, please talk to a teacher or trusted adult."
                android:layout_width="wrap_content"
                android:layout_height="112dp"
                android:id="@+id/textView12"
                android:textSize="20sp"
                android:textAlignment="center" android:textColor="@color/colorPrimaryDark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/txtview_reports_examplesofbullying_option6"
                app:layout_constraintHorizontal_bias="1.0"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txtview_reports_examplesofbullying_option6"
                android:textStyle="bold"/>
    </android.support.constraint.ConstraintLayout>

</ScrollView>