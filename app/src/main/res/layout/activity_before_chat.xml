<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:orientation="vertical"
            android:fillViewport="false">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 android:background="null">


        <TextView
                android:text="Welcome to the Wildcats Against Bullying Chat Room!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/txtview_beforechat_welcome" android:textSize="24sp" android:textAlignment="center"
                android:textColor="@android:color/white"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"/>
        <Button
                android:text="I Understand and Agree                     >"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:id="@+id/btn_beforechat_agree" android:textSize="20sp" android:textAlignment="viewStart"
                android:textColor="@color/colorAccent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="76dp"
                app:layout_constraintTop_toBottomOf="@+id/txtview_beforechat_3"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
        <TextView
                android:text="The chat rooms are a judgement-free space for you to express your feelings toward bullying. Before you enter, here's a few things you should know:"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtview_beforechat_1" android:textSize="20sp"
                android:textColor="@android:color/white"
                android:textAlignment="textStart"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txtview_beforechat_welcome" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtview_beforechat_2"
                android:textColor="@android:color/white" android:textSize="20sp"
                android:textAlignment="textStart"
                android:text="-Bullying is not permitted in the chat. Anything in the chat can be reported if another student feels bullied, so be aware of the words you use."
                app:layout_constraintStart_toStartOf="@+id/txtview_beforechat_1"
                app:layout_constraintEnd_toEndOf="@+id/txtview_beforechat_1"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txtview_beforechat_1"/>
        <TextView
                android:text="-If you feel bullied, make sure to screenshot the message and report it using the flag icon in the upper right hand corner."
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20sp" android:textColor="@android:color/white"
                android:id="@+id/txtview_beforechat_3"
                app:layout_constraintStart_toStartOf="@+id/txtview_beforechat_2"
                app:layout_constraintEnd_toEndOf="@+id/txtview_beforechat_2"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txtview_beforechat_2"/>
    </android.support.constraint.ConstraintLayout>

</ScrollView>