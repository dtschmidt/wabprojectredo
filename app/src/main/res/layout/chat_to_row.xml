<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:layout_marginBottom="12dp">

    <TextView
            android:text="message !!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/torowtext"
            android:id="@+id/txtview_torow_message"
            android:padding="16dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtview_torow_username"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="username"
            android:layout_width="wrap_content"
            android:layout_height="17dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" android:id="@+id/txtview_torow_username"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtview_torow_time" app:layout_constraintEnd_toStartOf="@+id/txtview_torow_message"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/txtview_torow_message"
            app:layout_constraintBottom_toBottomOf="@+id/txtview_torow_message"/>
</android.support.constraint.ConstraintLayout>