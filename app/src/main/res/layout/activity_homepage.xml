<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:weightSum="1"
        android:orientation="vertical"
        tools:context=".HomepageActivity" android:id="@+id/linearLayoutCompat">
    <ImageButton
            android:layout_width="401dp"
            android:layout_height="104dp" app:srcCompat="@drawable/music"
            android:id="@+id/btn_homepage_music" app:layout_constraintEnd_toEndOf="@+id/textView13"
            app:layout_constraintStart_toStartOf="@+id/textView13" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView13" app:layout_constraintHorizontal_bias="0.503"/>
    <TextView
            android:text="HOME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13"
            android:textColor="@android:color/white" android:textSize="36sp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <ImageButton
            android:layout_width="403dp"
            android:layout_height="112dp" app:srcCompat="@drawable/game"
            android:id="@+id/btn_homepage_game" app:layout_constraintEnd_toEndOf="@+id/btn_homepage_music"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_homepage_music"
            app:layout_constraintStart_toStartOf="@+id/btn_homepage_music"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.8"/>
    <ImageButton
            android:layout_width="414dp"
            android:layout_height="114dp" app:srcCompat="@drawable/chat"
            android:id="@+id/btn_homepage_chat" app:layout_constraintEnd_toEndOf="@+id/btn_homepage_game"
            app:layout_constraintStart_toStartOf="@+id/btn_homepage_game" app:layout_constraintHorizontal_bias="0.736"
            app:layout_constraintTop_toBottomOf="@+id/btn_homepage_game"
            android:layout_marginStart="8dp" android:layout_marginTop="20dp"/>
    <ImageButton
            android:layout_width="403dp"
            android:layout_height="103dp" app:srcCompat="@drawable/report"
            android:id="@+id/btn_homepage_report" app:layout_constraintEnd_toEndOf="@+id/btn_homepage_chat"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_homepage_chat"
            app:layout_constraintStart_toStartOf="@+id/btn_homepage_chat" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <ImageButton
            android:layout_width="417dp"
            android:layout_height="108dp" app:srcCompat="@drawable/links"
            android:id="@+id/btn_homepage_links" app:layout_constraintStart_toStartOf="@+id/btn_homepage_report"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_homepage_report"
            app:layout_constraintEnd_toEndOf="@+id/btn_homepage_report" app:layout_constraintHorizontal_bias="0.714"/>
</android.support.constraint.ConstraintLayout>
