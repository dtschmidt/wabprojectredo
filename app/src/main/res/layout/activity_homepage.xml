<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:weightSum="5"
        android:orientation="vertical"
        tools:context=".HomepageActivity" android:id="@+id/linearLayoutCompat" android:paddingTop="32dp"
        android:paddingBottom="32dp">
    <Button
            android:layout_weight="1"
            android:text="Music"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:drawableEnd="@drawable/musicdraw"
            android:id="@+id/btn_homepage_music" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497" android:background="@android:color/background_light"
            android:paddingEnd="16dp" android:fontFamily="@font/bad_script" android:textSize="55sp"
            android:textColor="@color/colorAccent"/>
    <Button
            android:layout_weight="1"
            android:text="Game"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:drawableStart="@drawable/gamedraw"
            android:id="@+id/btn_homepage_game" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_homepage_music"
            android:background="@android:color/background_light" android:paddingStart="16dp"
            android:fontFamily="@font/exo_bold" android:textSize="64sp" android:textColor="@color/colorAccent"/>
    <Button
            android:layout_weight="1"
            android:text="Chat"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:drawableEnd="@drawable/chatdraw"
            android:id="@+id/btn_homepage_chat" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_homepage_game"
            android:background="@android:color/background_light" android:paddingEnd="16dp"
            android:fontFamily="@font/neuton" android:textSize="64sp" android:textColor="@color/colorAccent"/>
    <Button
            android:layout_weight="1"
            android:text="Report"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:drawableStart="@drawable/reportdraw"
            android:id="@+id/btn_homepage_report" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/btn_homepage_chat"
            android:background="@android:color/background_light" android:paddingStart="16dp"
            android:fontFamily="@font/krona_one" android:textColor="@color/colorAccent" android:textSize="50sp"/>
    <Button
            android:layout_weight="1"
            android:text="Links"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:drawableEnd="@drawable/linksdraw"
            android:id="@+id/btn_homepage_links" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_homepage_report" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@android:color/background_light"
            android:paddingEnd="16dp" android:fontFamily="@font/amiko" android:textColor="@color/colorAccent"
            android:textSize="64sp"/>
</android.support.v7.widget.LinearLayoutCompat>
