        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".ChatActivity">

    <Button
            android:text="aight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_chat_chatroom1" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="chat room 2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_chat_chatroom2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_chat_chatroom1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
