<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:fillViewport="false">

<android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/colorPrimary">


    <TextView
            android:text="You should report bullying if..."
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtview_reports_examplesofbullying2" android:textSize="20sp" android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtview_beforechat_welcome" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Reports"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/txtview_beforechat_welcome" android:textSize="36sp" android:textAlignment="center"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"/>
    <Button
            android:text="I Understand and Agree                    >"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_beforereport_report" android:textSize="20sp" android:textAlignment="viewStart"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView12"
            app:layout_constraintEnd_toEndOf="@+id/textView12" app:layout_constraintStart_toStartOf="@+id/textView12"
            android:paddingBottom="8dp" android:paddingTop="8dp"/>
    <TextView
            android:text="  -You have witnessed someone being bullied"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtview_beforechat_1" android:textSize="20sp"
            android:textColor="@android:color/white"
            android:textAlignment="textStart"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtview_reports_examplesofbullying2"/>
    <TextView
            android:text="  -You have been bullied"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtview_reports_reportbullyingif_option2" android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtview_beforechat_1"
            app:layout_constraintStart_toStartOf="@+id/txtview_beforechat_1" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/txtview_beforechat_1"/>
    <TextView
            android:text="Examples of bullying include..."
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtview_reports_examplesofbullying" android:textSize="20sp" android:textStyle="bold"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@+id/txtview_reports_reportbullyingif_option2"
            app:layout_constraintEnd_toEndOf="@+id/txtview_reports_reportbullyingif_option2"
            app:layout_constraintStart_toStartOf="@+id/txtview_reports_reportbullyingif_option2"
            android:layout_marginTop="16dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtview_beforechat_2"
            android:textColor="@android:color/white" android:textSize="20sp"
            android:textAlignment="textStart"
            android:text="  -Persistent or egregious use of abusive, consulting, or offensive language"
            app:layout_constraintTop_toBottomOf="@+id/txtview_reports_examplesofbullying"
            app:layout_constraintStart_toStartOf="@+id/txtview_reports_examplesofbullying"
            app:layout_constraintEnd_toEndOf="@+id/txtview_reports_examplesofbullying"/>
    <TextView
            android:text="  -Aggressive yelling or shouting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView7" android:textSize="20sp"
            android:textColor="@android:color/white" app:layout_constraintStart_toStartOf="@+id/txtview_beforechat_2"
            app:layout_constraintTop_toBottomOf="@+id/txtview_beforechat_2" app:layout_constraintEnd_toEndOf="@+id/txtview_beforechat_2"/>
    <TextView
            android:text="  -Unwarranted physical contact or threatening gestures"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView8" android:textSize="20sp"
            android:textColor="@android:color/white"
            android:textAlignment="viewStart"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            app:layout_constraintStart_toStartOf="@+id/textView7" app:layout_constraintEnd_toEndOf="@+id/textView7"/>
    <TextView
            android:text="  -Making repeated negative comments about a person's appearance, lifestyle, family, or culture"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:textSize="20sp" android:textColor="@android:color/white"
            android:textAlignment="viewStart"
            app:layout_constraintTop_toBottomOf="@+id/textView8" android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="@+id/textView8" app:layout_constraintStart_toStartOf="@+id/textView8"/>
    <TextView
            android:text="  -Regularly inappropriately teasing or making someone the brunt of pranks or practical jokes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView10" android:textSize="20sp"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            app:layout_constraintStart_toStartOf="@+id/textView9" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
    />
    <TextView
            android:text="  -Circulating inappropriate or embarrassing photos or videos via email or social media"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp" android:textColor="@android:color/white"
            android:id="@+id/txtview_reports_examplesofbullying_option6"
            app:layout_constraintStart_toStartOf="@+id/textView10" app:layout_constraintEnd_toEndOf="@+id/textView10"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView10"/>
    <TextView
            android:text="All bullying reports will be reviewed by a Student Committee weekly. If you have a concern that needs to be looked at today, please talk to a teacher or trusted adult."
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            android:textSize="20sp"
            android:textAlignment="center" android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/txtview_reports_examplesofbullying_option6"
            app:layout_constraintEnd_toEndOf="@+id/txtview_reports_examplesofbullying_option6"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtview_reports_examplesofbullying_option6"/>
</android.support.constraint.ConstraintLayout>

</ScrollView>