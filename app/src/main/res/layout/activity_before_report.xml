<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:fillViewport="false">

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/colorPrimary">


    <TextView
            android:text="Reports"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/txtview_reports" android:textSize="36sp" android:textAlignment="center"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"/>
    <Button
            android:text="Report Bullying                                      >"
            android:layout_width="403dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="@+id/txtview_reports"
            app:layout_constraintEnd_toEndOf="@+id/txtview_reports"
            android:id="@+id/btn_beforereport_report" android:textSize="20sp" android:textAlignment="viewStart"
            android:textColor="@color/colorAccent"
            app:layout_constraintTop_toBottomOf="@+id/txtview_reports"/>
    <TextView
            android:text="You should report bullying if..."
            android:layout_width="394dp"
            android:layout_height="42dp"
            android:id="@+id/txtview_reports_reportbullyingif" android:textSize="20sp"
            android:textColor="@android:color/white" app:layout_constraintStart_toStartOf="@+id/btn_beforereport_report"
            android:layout_marginStart="16dp" android:textStyle="bold" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_beforereport_report" app:layout_constraintEnd_toEndOf="@+id/btn_beforereport_report"
            app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:text="  -You have witnessed someone being bullied"
            android:layout_width="398dp"
            android:layout_height="57dp"
            android:id="@+id/txtview_reports_reportbullyingif_option1" android:textSize="20sp"
            android:textColor="@android:color/white" app:layout_constraintStart_toStartOf="@+id/txtview_reports_reportbullyingif"
            android:layout_marginStart="16dp" android:textAlignment="textStart"
            app:layout_constraintTop_toBottomOf="@+id/txtview_reports_reportbullyingif" app:layout_constraintEnd_toEndOf="@+id/txtview_reports_reportbullyingif"
            app:layout_constraintHorizontal_bias="0.8"/>
    <TextView
            android:text="  -You have been bullied"
            android:layout_width="398dp"
            android:layout_height="31dp"
            android:id="@+id/txtview_reports_reportbullyingif_option2" android:textSize="20sp"
            android:textColor="@android:color/white"
            app:layout_constraintStart_toStartOf="@+id/txtview_reports_reportbullyingif_option1"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toBottomOf="@+id/txtview_reports_reportbullyingif_option1"
            app:layout_constraintEnd_toEndOf="@+id/txtview_reports_reportbullyingif_option1"
            app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:text="Examples of bullying include..."
            android:layout_width="397dp"
            android:layout_height="43dp"
            android:id="@+id/txtview_reports_examplesofbullying" android:textSize="20sp" android:textStyle="bold"
            android:textColor="@android:color/white" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toBottomOf="@+id/txtview_reports_reportbullyingif_option2"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textColor="@android:color/white" android:textSize="20sp"
            android:textAlignment="textStart"
            android:text="  -Persistent or egregious use of abusive, consulting, or offensive language"
            app:layout_constraintTop_toBottomOf="@+id/txtview_reports_examplesofbullying"
            app:layout_constraintStart_toStartOf="@+id/txtview_reports_examplesofbullying"/>
    <TextView
            android:text="  -Aggressive yelling or shouting"
            android:layout_width="402dp"
            android:layout_height="27dp"
            android:id="@+id/textView7" android:textSize="20sp"
            android:textColor="@android:color/white" app:layout_constraintStart_toStartOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/textView6"/>
    <TextView
            android:text="  -Unwarranted physical contact or threatening gestures"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8" android:textSize="20sp"
            android:textColor="@android:color/white" app:layout_constraintStart_toStartOf="@+id/textView7"
            android:textAlignment="viewStart"
            app:layout_constraintTop_toBottomOf="@+id/textView7"/>
    <TextView
            android:text="  -Making repeated negative comments about a person's appearance, lifestyle, family, or culture"
            android:layout_width="404dp"
            android:layout_height="75dp"
            android:id="@+id/textView9" app:layout_constraintStart_toStartOf="@+id/textView8"
            android:textSize="20sp" android:textColor="@android:color/white"
            android:textAlignment="viewStart"
            app:layout_constraintTop_toBottomOf="@+id/textView8" android:layout_marginTop="4dp"/>
    <TextView
            android:text="  -Regularly inappropriately teasing or making someone the brunt of pranks or practical jokes"
            android:layout_width="402dp"
            android:layout_height="48dp"
            android:id="@+id/textView10" android:textSize="20sp"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            app:layout_constraintStart_toStartOf="@+id/textView9" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
    />
    <TextView
            android:text="  -Circulating inappropriate or embarrassing photos or videos via email or social media"
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            app:layout_constraintStart_toStartOf="@+id/textView10"
            android:textSize="20sp" android:textColor="@android:color/white"
            android:layout_marginBottom="64dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView10" app:layout_constraintVertical_bias="0.0"
            android:id="@+id/txtview_reports_examplesofbullying_option6"/>
    <TextView
            android:text="All bullying reports will be reviewed by a Student Committee weekly. If you have a concern that needs to be looked at today, please talk to a teacher or trusted adult."
            android:layout_width="wrap_content"
            android:layout_height="112dp"
            android:id="@+id/textView12"
            android:textSize="20sp"
            android:textAlignment="center" android:textColor="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/txtview_reports_examplesofbullying_option6"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtview_reports_examplesofbullying_option6"
    />
</android.support.constraint.ConstraintLayout>

</ScrollView>