<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorPrimary"
            android:fillViewport="false">

    <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            tools:context=".MusicActivity">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" tools:layout_editor_absoluteY="366dp"
                tools:layout_editor_absoluteX="0dp">
            <TextView
                    android:text="Music"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/txtview_music" android:textColor="@android:color/white" android:textSize="30sp"
                    android:layout_marginTop="4dp" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_bias="0.53" android:textAlignment="center"/>
            <TextView
                    android:text="Anti-Bullying Jamz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtview_music_anti-bullyingjamz" android:textSize="20sp"
                    android:textColor="@color/colorAccent"
                    android:textAlignment="center" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/txtview_music"
                    app:layout_constraintEnd_toEndOf="@+id/txtview_music"
                    app:layout_constraintStart_toStartOf="@+id/txtview_music" android:fontFamily="sans-serif"
                    android:textStyle="bold"/>
            <TextView
                    android:text="Songs and videos from artists like BeyoncÃ©, Big Time Rush, Drake and more"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtview_music_anti-bullyingjamz_description" android:textAlignment="center"
                    android:textSize="18sp"
                    android:textColor="@android:color/white" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/txtview_music_anti-bullyingjamz"
                    app:layout_constraintStart_toStartOf="parent"/>
            <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@null"
                    app:srcCompat="@drawable/playlist1"
                    android:scaleType="fitXY"
                    android:id="@+id/btn_music_spotify1"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtview_music_anti-bullyingjamz_description"
                    android:layout_marginTop="20dp"
                    app:layout_constraintHorizontal_bias="0.0"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    app:srcCompat="@drawable/youtube"
                    android:background="@null"
                    android:id="@+id/btn_music_youtube1" android:scaleType="fitCenter"
                    android:layout_height="70dp"
                    app:layout_constraintTop_toBottomOf="@+id/btn_music_spotify1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="12dp"
                    app:layout_constraintHorizontal_bias="0.0"/>
            <TextView
                    android:text="Bop Away Bullying"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtview_bopawaybullying" android:textSize="20sp"
                    android:textColor="@color/colorAccent"
                    app:layout_constraintTop_toBottomOf="@+id/txtview_music"
                    app:layout_constraintEnd_toEndOf="@+id/txtview_music"
                    app:layout_constraintStart_toStartOf="@+id/txtview_music"
                    app:layout_constraintHorizontal_bias="0.505" android:textAlignment="center"
                    android:textStyle="bold" android:layout_marginTop="16dp"/>
            <TextView
                    android:text="Songs and videos from artists like Rihanna, Katy Perry, Justin Bieber and more"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtview_music_bopawaybullying_description" android:textAlignment="center"
                    android:textSize="18sp" app:layout_constraintEnd_toEndOf="@+id/txtview_bopawaybullying"
                    app:layout_constraintStart_toStartOf="@+id/txtview_bopawaybullying"
                    app:layout_constraintHorizontal_bias="0.546"
                    android:textColor="@android:color/white"
                    app:layout_constraintTop_toBottomOf="@+id/txtview_bopawaybullying" android:layout_marginTop="16dp"/>
            <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@null"
                    app:srcCompat="@drawable/playlist2"
                    android:scaleType="fitCenter" android:padding="0dp"
                    android:id="@+id/btn_music_spotify2"
                    app:layout_constraintTop_toBottomOf="@+id/txtview_music_bopawaybullying_description"
                    app:layout_constraintStart_toStartOf="@+id/txtview_music_bopawaybullying_description"
                    app:layout_constraintEnd_toEndOf="@+id/txtview_music_bopawaybullying_description"
                    app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="24dp"/>
            <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@null"
                    app:srcCompat="@drawable/youtube"
                    android:scaleType="fitCenter"
                    app:layout_constraintStart_toStartOf="@+id/btn_music_spotify2"
                    android:id="@+id/btn_music_youtube2" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/btn_music_spotify2"
                    app:layout_constraintEnd_toEndOf="@+id/btn_music_spotify2"
                    app:layout_constraintHorizontal_bias="0.555"/>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</ScrollView>

