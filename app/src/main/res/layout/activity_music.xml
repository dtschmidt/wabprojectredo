<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".MusicActivity">

    <Button
            android:text="Spotify playlist 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_music_spotify1" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Spotify Playlist 2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/btn_music_spotify2" android:layout_marginTop="190dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_music_spotify1"/>
    <Button
            android:text="Youtube playlist 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/btn_music_youtube1" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_music_spotify2"/>
    <Button
            android:text="Youtube playlist 2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/btn_music_youtube2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_music_youtube1"/>
</android.support.constraint.ConstraintLayout>