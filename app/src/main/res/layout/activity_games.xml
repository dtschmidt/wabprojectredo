<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".GamesActivity">

    <TextView
            android:text="Games"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/txtview_games" android:textSize="36sp" android:textColor="@android:color/white"
            android:layout_marginEnd="8dp" android:layout_marginStart="8dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.498"/>
    <Button
            android:text="Quiz Game                                                   >"
            android:layout_width="424dp"
            android:layout_height="60dp"
            android:id="@+id/btn_games_quiz"
            android:textSize="20sp" android:textAlignment="textStart" android:textColor="@color/colorAccent"
            android:layout_marginTop="96dp"
            app:layout_constraintTop_toBottomOf="@+id/txtview_games"
            app:layout_constraintEnd_toEndOf="@+id/txtview_games"
            app:layout_constraintStart_toStartOf="@+id/txtview_games"
            app:layout_constraintHorizontal_bias="0.48"/>
    <Button
            android:text="Monthly Survey                                     >"
            android:layout_width="419dp"
            android:layout_height="62dp"
            android:id="@+id/button5" android:textSize="20sp"
            android:textColor="@color/colorAccent" android:textAlignment="viewStart"
            android:layout_marginTop="180dp"
            app:layout_constraintTop_toBottomOf="@+id/txtview_games"
            app:layout_constraintEnd_toEndOf="@+id/txtview_games" android:layout_marginEnd="40dp"
            app:layout_constraintStart_toStartOf="@+id/txtview_games" app:layout_constraintHorizontal_bias="0.432"/>
</android.support.constraint.ConstraintLayout>

